docRoot                   /home/VH_ROOT/public_html/
index  {
  useServer               0
  indexFiles              index.php
}

context / {
  location                $DOC_ROOT
  allowBrowse             1
  indexFiles              index.php

  rewrite  {
    enable                1
    inherit               1
    rewriteFile           /home/VH_ROOT/public_html/.htaccess
  }
}

rewrite  {
  enable                  1
  autoLoadHtaccess        1
}

vhssl  {
    keyFile                 /home/VH_ROOT/cert/ssl.key
    certFile                /home/VH_ROOT/cert/ssl.crt
}
